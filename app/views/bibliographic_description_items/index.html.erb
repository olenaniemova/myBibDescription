<p id="notice"><%= notice %></p>

<h1>Bibliographic Description Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Publisher</th>
      <th>Source style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bibliographic_description_items.each do |bibliographic_description_item| %>
      <tr>
        <td><%= bibliographic_description_item.title %></td>
        <td><%= bibliographic_description_item.year %></td>
        <td><%= bibliographic_description_item.publisher %></td>
        <td><%= bibliographic_description_item.source_style_id %></td>
        <td><%= link_to 'Show', bibliographic_description_item %></td>
        <td><%= link_to 'Edit', edit_bibliographic_description_item_path(bibliographic_description_item) %></td>
        <td><%= link_to 'Destroy', bibliographic_description_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

