<p id="notice"><%= notice %></p>

<h1>Bibliographic Descriptions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bibliographic_descriptions.each do |bibliographic_description| %>
      <tr>
        <td><%= bibliographic_description.title %></td>
        <td><%= bibliographic_description.description %></td>
        <td><%= bibliographic_description.profile_id %></td>
        <td><%= link_to 'Show', bibliographic_description %></td>
        <td><%= link_to 'Edit', edit_bibliographic_description_path(bibliographic_description) %></td>
        <td><%= link_to 'Destroy', bibliographic_description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

